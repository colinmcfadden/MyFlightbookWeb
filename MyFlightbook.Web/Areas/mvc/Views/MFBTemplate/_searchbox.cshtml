@Html.AntiForgeryToken()
<div class="searchBox" id="@ViewBag.searchID">
    <img src=@VirtualPathUtility.ToAbsolute("~/images/Search.png") class="searchBoxIcon" alt="" tooltip="" />
    <input type="text" class="searchBoxTextBox noselect" name="searchText" placeholder="@ViewBag.searchPrompt" />
    <input type="submit" value="submit" id="@ViewBag.searchBtnID" style="display:none;" />
    <script type="text/javascript">
    $(function () {
        $('@ViewBag.searchID').keydown(function (e) {
            if (e.keyCode == 13) {
                $("#@ViewBag.searchBtnID").focus().click();
                return false;
            }
        });
    });
    </script>
</div>

