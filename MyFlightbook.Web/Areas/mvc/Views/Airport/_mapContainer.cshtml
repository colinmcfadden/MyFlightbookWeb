@using MyFlightbook.Mapping
@if (ViewBag.Map.MapMode == GMap_Mode.Static)
{
    <div style="text-align:center; width:100%">
        <img src="@ViewBag.Map.StaticMapHRef(MyFlightbook.SocialMedia.GooglePlusConstants.MapsKey, 400, 600)" alt="" style="width: 600px; height: 400px; margin-left: auto; margin-right: auto;" />
    </div>
}
else
{
<div id="@ViewBag.Map.Options.divContainer" style="width: 100%; height: 400px;"></div>
<script type="text/javascript">
    var @ViewBag.Map.Options.PathVarName =[];
    deferMapLoad(@Html.Raw(ViewBag.Map.MapJScript(ViewBag.Map.Options.id, ViewBag.Map.Options.divContainer)));
</script>
}
