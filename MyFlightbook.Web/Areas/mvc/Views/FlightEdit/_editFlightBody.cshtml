                    addXFillMap('total', 'fieldTotal')
                });
            </script>
        </div>
        <div style="clear:both;"></div>
        <div ID="pnlFlightData" class="flightinfoitem">
            <table>
                <tr class="itemlabel">
                    <td><span style="font-weight:bold">@Resources.LogbookEntry.FieldTelemetry</span> <a class="fineprint" href="@("~/mvc/pub/FlightDataKey".ToAbsolute())" target="_blank">@Resources.LogbookEntry.FieldTelemetryLearnMore</a></td>
                    <td>
                        <input type="file" id="fieldUploadTelemetry" name="flightTelemetry" style="@(le.HasFlightData ? "display: none;" : string.Empty)" />
                        @if (le.HasFlightData)
                        {
                            if (!le.IsNewFlight)
                            {
                                <a target="_blank" href="@String.Format(CultureInfo.InvariantCulture, "~/mvc/flights/details/{0}", le.FlightID).ToAbsolute()">
                                    <image src="@("~/images/Clip.png".ToAbsolute())" title="@Resources.LogbookEntry.FlightHasDataTooltip" alt="@Resources.LogbookEntry.FlightHasDataTooltip" /> @Resources.LogbookEntry.FlightHasData
