                            {
                                <image src="@("~/images/Clip.png".ToAbsolute())" title="@Resources.LogbookEntry.FlightHasDataTooltip" alt="@Resources.LogbookEntry.FlightHasDataTooltip" /> @Resources.LogbookEntry.FlightHasData
                            }
